<div class="pagination flex-row">
    <%  if(companiesData.hasPrevPage || companiesData.hasPrevPage == true){ %>
    <button class="prevPage" data-pageNumber="<%-companiesData.prevPage  %> ">Previous</button>
    <% } %>
    <%  if(companiesData.hasNextPage || companiesData.hasNextPage == true){ %>
    <button class="nextPage" data-pageNumber="<%-companiesData.nextPage  %> ">Next</button>
    <% } %>
    <span>
        Current
        <span>
            <select class="curPage">
                <% for(let page=1; page <= companiesData.totalPages; page++){ %>
                <%  if(page === companiesData.page){ %>
                <option selected="selected" value="<%- page  %>"><%- page  %></option>
                <% }else{ %>
                <option value="<%- page  %>"><%- page  %></option>
                <% } %>
                <% } %>
            </select>
        </span>
        Pages <%-companiesData.totalPages  %>
    </span>
    <%  if(companiesData.postperpage){ %>
    <span>
        Post/Page
        <span>
            <select class="postPerPage ">
                <% for(let postperpage=10; postperpage <= 100; postperpage+=5){ %>
                <%  if(postperpage == companiesData.postperpage){ %>
                <option selected="selected" value="<%- postperpage  %>"><%- postperpage  %></option>
                <% }else{ %>
                <option value="<%- postperpage  %>"><%- postperpage  %></option>
                <% } %>
                <% } %>
            </select>
        </span>
    </span>
    <% } %>
</div>